			'terminal_id'       => $settings['terminal_id'] ?? '',
			'terminal_password' => $settings['terminal_password'] ?? '',
			'secret_key'        => $settings['secret_key'] ?? '',
			'test_mode'         => $settings['test_mode'] ?? 'yes',
